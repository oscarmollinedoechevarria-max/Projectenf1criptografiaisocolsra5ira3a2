<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".report.ReportProblemFragment">

    <TextView
        android:id="@+id/labelTitol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportar problemes"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/editTextProblema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descriu el teu problema"
        android:inputType="textMultiLine"
        android:lines="5"
        android:gravity="top"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/material_on_surface_emphasis_high_type"
        android:text="Enviar a servei tecnic"/>

    <Button
        android:id="@+id/buttonTornar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:text="Tornar a la pantalla principal" />

</LinearLayout>
</layout>